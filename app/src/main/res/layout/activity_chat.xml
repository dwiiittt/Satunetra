<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgBlue"
    android:layout_height="match_parent"
    tools:context=".activities.ChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_netra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="14dp"
        android:background="@drawable/rect_shape_border_bottom">
            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_logo_satunetra_white"
                android:background="@drawable/circle_shape_user"
                android:paddingVertical="10dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white"
                android:layout_marginLeft="30dp" />
            <TextView
                android:id="@+id/tv_satuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/mainBlue"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toTopOf="@id/iv_user"
                app:layout_constraintStart_toEndOf="@id/iv_user"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />
            <View
                android:id="@+id/v_online"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_shape"
                app:layout_constraintStart_toEndOf="@id/iv_user"
                app:layout_constraintTop_toBottomOf="@id/tv_satuname"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />
            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check connection ..."
                android:textColor="@color/offlineOrange"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toTopOf="@id/v_online"
                app:layout_constraintBottom_toBottomOf="@id/v_online"
                app:layout_constraintStart_toEndOf="@id/v_online"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_chat_room"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bar_netra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bgBlue"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:clipToPadding="false"
            android:paddingBottom="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_voice_chat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bottom_shape"
            android:paddingVertical="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_mic_chat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_mic_24"
                app:tint="@color/white"
                />
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:fontFamily="@font/poppins_medium"
                android:textSize="23sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"
                />
        </LinearLayout>
    <View
        android:id="@+id/btn_gestur_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>